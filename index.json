import express from 'express';
import { compressToEncodedURIComponent } from 'lz-string';

const app = express();
const PORT = process.env.PORT || 3000;

app.use(express.json());

app.post('/render', (req, res) => {
  const { diagram } = req.body;
  if (!diagram) {
    return res.status(400).json({ error: 'Missing Mermaid diagram in "diagram" field' });
  }

  try {
    const encoded = compressToEncodedURIComponent(diagram);
    const url = `https://mermaid.ink/img/${encoded}`;
    return res.json({ url });
  } catch (err) {
    return res.status(500).json({ error: 'Failed to encode diagram', details: err.message });
  }
});

app.get('/', (req, res) => {
  res.send('Mermaid to PNG API is running. POST to /render with { "diagram": "your mermaid code" }');
});

app.listen(PORT, () => {
  console.log(`Mermaid server running on port ${PORT}`);
});

